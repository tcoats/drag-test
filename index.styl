@require "./node_modules/normalize.css/normalize.css"

*
  box-sizing border-box

body
  margin 0
  padding 0
  background black
  color white
  font-size 16px

.putty
  user-select none

.box
  position relative
  border 1px solid white
  border-radius 3px
  cursor pointer
  z-index 1

.area
  position relative
