@require "./node_modules/normalize.css/normalize.css"

*
  box-sizing border-box

body
  margin 0
  padding 0
  background black
  color white
  font-size 16px

.putty
  height 20px

.box
  position absolute
  border-left 1px solid black
  background-color #444
  top 0px
  height 20px
  pointer-events none
  &.selected
    background-color #999

.area
  position relative
