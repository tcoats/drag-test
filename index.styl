@require "./node_modules/normalize.css/normalize.css"


body
  margin 0
  padding 0
  background black
  color white
  font-size 16px

.area
  height 20px
  position relative
  background-color #222

.putty
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 1

.box
  position absolute
  border-left 2px solid black
  border-right 2px solid black
  background-color #444
  top 0px
  height 20px
  pointer-events none
  &.selected
    background-color #999

.start,
.end,
.hover
  position absolute
  top: 20px
  font-size 10px
  font-family monospace
  padding 2px
  width 50px

.start
  text-align right
  margin-left -53px

.hover
  text-align center
  margin-left -27px

svg path.segment
  fill #444
  stroke black
  stroke-width 2
