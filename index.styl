@require "./node_modules/normalize.css/normalize.css"

$background = #272730
$elevated = #41414C
$subtle = #898992
$primary = #5666F3
$highlight = #00F5FF

body
  margin 0
  padding 0
  background $background
  color white
  font-size 16px

.area
  height 20px
  position relative
  background-color $elevated
  .putty
    bottom -15px

.putty
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 1

.box
  position absolute
  border 2px solid $highlight
  // border-right 2px solid $highlight
  top 0px
  height 16px
  pointer-events none
  &.selected
    background-color transparent

.start,
.end,
.hover
  position absolute
  top: 20px
  font-size 10px
  font-family monospace
  padding 2px
  width 50px
  color $highlight

.start
  text-align right
  margin-left -53px

.hover
  text-align center
  margin-left -27px

svg path.segment
  fill transparent
  stroke $highlight
  stroke-width 2
  &.red
    fill red
    stroke none
  &.blue
    fill blue
    stroke none
  &.green
    fill green
    stroke none
  &.purple
    fill purple
    stroke none
