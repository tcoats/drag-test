@require "./node_modules/normalize.css/normalize.css"

*
  box-sizing border-box

body
  margin 0
  padding 0
  background black
  color white
  font-size 16px

.putty
  height 20px

.box
  position absolute
  border 1px solid white
  border-radius 3px
  top 0px
  height 20px
  pointer-events none
  &.selected
    border-color red

.area
  position relative
